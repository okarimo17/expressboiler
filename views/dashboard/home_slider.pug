extends ./layouts/layout.pug

block pageTitle
  title Slideshow - Dashboard
  style. 
    .normal-icon-size .icon{
      width: 1rem;
      height: 1rem;
    }
    .editorjs_holder {
      background: #F8F9FE;
      padding: 20px 0;
      border: 1px solid rgba(0,0,0,0.1);
      box-shadow: 1px 1px 12px 0px #a6a5ff4d;
    }
    img.image_preview {
      max-height: 350px;
      margin-top: 15px;
      width:100%;
      box-shadow: 2px 2px 10px #00000054;
    }
    .card-img-top{    
      max-height: 150px;
      object-fit: cover;
    }
    .card-body.slides_holder{
      display: flex;
      flex-wrap: wrap;
    }
    .card {
      margin: 5px;
    }
        

block mainpage
  // Header
  .header.bg-primary.pb-6
    .container-fluid
      .header-body
        .row.align-items-center.py-4
          .col-lg-6.col-7
            //- h6.h2.text-white.d-inline-block.mb-0 Actualité
            nav.d-none.d-md-inline-block.ml-md-4(aria-label='breadcrumb')
              ol.breadcrumb.breadcrumb-links.breadcrumb-dark
                li.breadcrumb-item
                  a(href='/dashboard')
                    i.fas.fa-home
                li.breadcrumb-item
                  a(href='/dashboard/slideshow') SlideShow
                //- li.breadcrumb-item.active(aria-current='page') 
          //- .col-lg-6.col-5.text-right
          //-   a.btn.btn-sm.btn-neutral(href='#') New
          //-   a.btn.btn-sm.btn-neutral(href='#') Filters
  form#slide_item_form
    div#new_slide_modal.modal(tabindex='-1' role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title SlideShow
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') ×
          .modal-body

              .form-group
                label(for='name') SubTitle :
                input.sub.form-control(name="sub" type='text' placeholder='WE ARE PROUD' required)
                //- small#emailHelp.form-text.text-muted text of menu item
              .form-group
                label(for='url') Main Title :
                input.title.form-control(name="title" type='text' placeholder='TO BE ALWAYS ON DEMAND' required)
                //- small#emailHelp.form-text.text-muted Lien of menu item
              .form-group
                label(for='url') Descreption :
                input.desc.form-control(name="desc" type='text' placeholder='Lorem Ipsum is simply dummy text of the printing' required)
                //- small#emailHelp.form-text.text-muted Lien of menu item
              .form-group.row.d-none
                .col-sm-10
                  input.image.picture.form-control(type='text' name="picture" value="" )
                  input.id.form-control(type='text' name="id" value="-1" )

              .form-group.row
                label.col-sm-2.col-form-label Image
                .col-sm-10
                  input.form-control.feature_up(type='file')
                .col-12 
                  img.img-responsive.image_preview(src=null)
                  .loading-spinner.text-center.d-none
                    .spinner-border.text-secondary(role='status')
                      span.sr-only Uploading Image...
                
          .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
            button#save_product.btn.btn-primary(type='submit') Save changes


  // Page content
  .container-fluid.mt--6
    .row
      .col.order-xl-1
        .card
          .card-header
            .row.align-items-center.d-flex.justify-content-between
              h3.mb-0 Modification De SlideShow 
              button#new_slide.btn.btn-sm.btn-neutral New
          .card-body.slides_holder


       

 
    include ./partials/footer

block pagescripts

  script(src='/dash/custom/slideshow.js')
  script(type='text/javascript').
    $(document).ready(function(){
      initSlideBlog(!{JSON.stringify(slides)});
    })
